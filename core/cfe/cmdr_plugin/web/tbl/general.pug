
.row.os-theme-dark                
  article.col-xs-12.col-sm-12
    header
      span.widget-icon
        i.fa.fa-table
      h2 General
    div.widget-body.table-responsive
      table.table.table-condensed
        tbody
          tr
            th(style={width:'170px'}) Cmd Count
            td(style={width:'150px'})
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.CmdCounter'}]}) ---
            td(style={width:'80px'})
          tr
            th Cmd Error Count
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.CmdCounter'}]}) ---
            td
          tr
            th
            td(colspan=2)
              .btn-group
                button.btn.btn-xs.btn-primary.btn-labeled.sage-cmd-inline(data-cdr={cmd: {name: '/CFE/CFE_TBL_Noop'}}) NoOp
                button.btn.btn-xs.btn-primary.btn-labeled.sage-cmd-inline(data-cdr={cmd: {name: '/CFE/CFE_TBL_Reset'}}) Counter Reset
          tr
            th Number of Tables
            td 
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.NumTables'}]}) ---
            td
          tr
            th Pending updates
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.NumLoadPending'}]}) ---
            td
          tr
            th Validations
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.ValidationCtr'}]}) ---
            td
          tr
            th Last CRC
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.LastValCrc', format:'0x%08x'}]}) ---
            td
          tr
            th Last Valid Table
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.LastValTableName'}]}) ---
            td
          tr
            th Last Validation
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.LastValStatus'}]}) ---
            td
          tr
            th Active Buffer
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.ActiveBuffer', format:'0x%08x'}]}) ---
            td
          tr
            th Successful Validations
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.SuccessValCtr'}]}) ---
            td
          tr
            th Failed Validations
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.FailedValCtr'}]}) ---
            td
          tr
            th Validation Requests
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.NumValRequests'}]}) ---
            td
          tr
            th Free Shared Buffers
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.NumFreeSharedBufs'}]}) ---
            td
          tr
            th Last Updated Table
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.LastUpdatedTbl'}]}) ---
            td
          tr
            th Last File Loaded
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.LastFileLoaded'}]}) ---
            td
          tr
            th Last File Dumped
            td
              span(data-cdr={tlm:[{name:'/CFE/TBL_HK/Payload.LastFileDumped'}]}) ---
            td
    footer
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/CFE_TBL_LoadCmd_t'}}) Load
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/CFE_TBL_AbortLdCmd_t'}}) Abort Load
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/CFE_TBL_DumpCmd_t'}}) Dump
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/CFE_TBL_ValidateCmd_t'}}) Validate
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/CFE_TBL_ActivateCmd_t'}}) Activate
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/TBL_DumpReg'}}) Dump Reg
      button.btn.btn-xs.btn-primary.btn-labeled(data-cdr={cmd: {name: '/CFE/CFE_TBL_DelCDSCmd_t'}}) Delete CDS
